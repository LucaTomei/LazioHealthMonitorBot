# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
TELEGRAM_BOT_TOKEN=IL_TUO_TOKEN_QUI

# ============================================
# API CONFIGURATION
# ============================================
# Lazio Recup API Base URL
BASE_URL=https://recup-webapi-appmobile.regione.lazio.it

# API Authorization Header (Base64 encoded)
AUTH_HEADER=Basic QVBQTU9CSUxFX1NQRUNJQUw6UGs3alVTcDgzbUh4VDU4NA==

# ============================================
# APPLICATION SETTINGS
# ============================================
# Server name for multi-server setup
SERVER_NAME=server1

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Timezone
TZ=Europe/Rome

# ============================================
# DIRECTORIES
# ============================================
# Directory for PDF downloads
PDF_FOLDER=prenotazioni_pdf

# Directory for reports
REPORTS_FOLDER=reports_pdf

# ============================================
# DATA FILES
# ============================================
# Input prescriptions file
INPUT_FILE=input_prescriptions.json

# Previous data cache file
PREVIOUS_DATA_FILE=previous_data.json

# Authorized users file
USERS_FILE=authorized_users.json

# Reports monitoring file
REPORTS_MONITORING_FILE=reports_monitoring.json

# ============================================
# MONITORING SETTINGS
# ============================================
# Check interval in seconds (default: 300 = 5 minutes)
CHECK_INTERVAL=300

# Enable/disable notifications (true/false)
ENABLE_NOTIFICATIONS=true

# ============================================
# ADVANCED SETTINGS (Optional)
# ============================================
# Maximum retries for API calls
MAX_RETRIES=3

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Enable debug mode (true/false)
DEBUG_MODE=false